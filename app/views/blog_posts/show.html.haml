%article
  - @title = "#{@post.title}"
  - @metadescription = "#{@post.metadescription}"
  .row
    .small-12.columns.centered
      %h3{style: "font-size:30px;"}
        = @post.title
      %time{datetime: "#{@post.updated_at}", pubdate:"pubdate"}
      %p.left.tiny
        = "Last Updated: #{@post.updated_at.strftime("%B %d, %Y")}"
      %hr
  .row
    .small-12.columns
      = simple_format(@post.content, {}, :sanitize => false)
  .row
    .small-12.columns.centered
      - if session["logged_in_user"] == true
        = button_to "Edit", edit_blog_post_path(@post.id), method: :get, form_class: "inline"
        = button_to "Logout", logout_path, form_class: "inline"

