%article
  - @title = "#{@post.title}"
  - @metadescription = "#{@post.metadescription}"
  .row
    .small-12.columns.centered
      %h3
        = @post.title
      %time{datetime: "#{@post.updated_at}", pubdate:"pubdate"}
      %p.left.tiny
        = "Published: #{@post.updated_at.strftime("%B %d, %Y")}"
      %hr
  .row
    .small-12.columns
      = raw(@post.content)

